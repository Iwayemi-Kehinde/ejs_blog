<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= locals.title %>
  </title>
</head>

<body>
  <a href="/" class="logo">
    <span>LOGO</span>
  </a>
  <div class="center">
    <h2 class="heading">Create a new account</h2>
    <div class="container">
      <form class="form" action="/users/register" method="post">
        <div class="input">
          <label>Username</label>
          <input type="text" className="input" name="username" placeholder="username" />
        </div>

        <div class="input">
          <label>Email</label>
          <input type="email" className="input" name="email" placeholder="email" />
        </div>

        <div class="input">
          <label>Password</label>
          <input type="password" className="input" name="password" placeholder="password" />
        </div>

        <div class="flex">
          <div>
            already have an account?
            <a href="/users/login">login</a>
          </div>
          <div>
            <span>remember me</span>
            <input type="checkbox" name="remember">
          </div>
        </div>

        <div style="display: block; margin-top: 20px">
          <input type="submit" value="Register"/>
        </div>
      </form>
    </div>
  </div>

  <% if (error_msg && error_msg.length> 0) { %>
    <div class="alert alert-danger" id="error">
      <div>
        <% error_msg.forEach(function(msg) { %>
          <p>
            <%= msg %>
          </p>
          <% }); %>
      </div>
      <button class="close" onclick="this.parentElement.style.display='none'">&times;</button>
    </div>
    <% } %>



      <% if (success_msg && success_msg.length> 0) { %>
        <div class="alert alert-success" id="success">
          <div>
            <% success_msg.forEach(function(msg) { %>
              <p>
                <%= msg %>
              </p>
              <% }); %>
          </div>
          <button class="close" onclick="this.parentElement.style.display='none'">&times;</button>
        </div>
        <% } %>


</body>
